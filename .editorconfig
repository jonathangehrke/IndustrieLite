root = true

# Allgemeine Editor-Einstellungen
[*]
indent_style = space
indent_size = 4
charset = utf-8
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true

# Godot: GDScript & Szenen (LF, Tabs fÃ¼r .gd)
[*.gd]
indent_style = tab
end_of_line = lf
charset = utf-8
insert_final_newline = true

[*.tscn]
end_of_line = lf
charset = utf-8
insert_final_newline = true

# Skripte
[*.sh]
end_of_line = lf
charset = utf-8

[*.ps1]
end_of_line = crlf
indent_style = space
indent_size = 4

# C#-Formatierung & Konventionen
[*.cs]
dotnet_sort_system_directives_first = true
csharp_prefer_braces = true:suggestion
csharp_new_line_before_open_brace = all
csharp_indent_case_contents = true
csharp_indent_switch_labels = true
csharp_style_var_for_built_in_types = true:suggestion
csharp_style_var_when_type_is_apparent = true:suggestion
csharp_style_var_elsewhere = true:suggestion
dotnet_diagnostic.SA1633.severity = none
dotnet_diagnostic.SA1517.severity = suggestion
dotnet_diagnostic.SA1513.severity = suggestion
dotnet_diagnostic.SA1515.severity = suggestion
dotnet_diagnostic.SA1518.severity = suggestion
dotnet_diagnostic.SA1208.severity = suggestion
dotnet_diagnostic.SA1027.severity = warning
dotnet_diagnostic.SA1028.severity = suggestion
dotnet_diagnostic.SA1122.severity = suggestion

# Verhindere blockierende Aufrufe auf Tasks (.Wait/.Result/.GetAwaiter().GetResult())
dotnet_diagnostic.MA0042.severity = error

# Dateiname entspricht erstem Typ in der Datei (global als Warning)
dotnet_diagnostic.SA1649.severity = warning

dotnet_diagnostic.SA1402.severity = warning
dotnet_diagnostic.CA1852.severity = warning
# Interfaces: Start mit 'I' und PascalCase
dotnet_naming_rule.interfaces_should_start_with_i.symbols = interfaces
dotnet_naming_rule.interfaces_should_start_with_i.style = interface_style
dotnet_naming_rule.interfaces_should_start_with_i.severity = error

dotnet_naming_symbols.interfaces.applicable_kinds = interface
dotnet_naming_symbols.interfaces.applicable_accessibilities = *
dotnet_naming_symbols.interfaces.required_modifiers =

dotnet_naming_style.interface_style.capitalization = pascal_case
dotnet_naming_style.interface_style.required_prefix = I

[code/sim/*.cs]
# In diesem Ordner strikt erzwingen (Error)
dotnet_diagnostic.SA1649.severity = error

[tests/**/*.cs]
dotnet_diagnostic.CA1707.severity = none
dotnet_diagnostic.CA1050.severity = none

# Analyzer-Schwellwerte (Beispiele)
dotnet_analyzer_diagnostic.severity = suggestion
dotnet_diagnostic.CS1591.severity = suggestion
dotnet_diagnostic.SA1600.severity = suggestion
dotnet_diagnostic.SA1604.severity = suggestion
dotnet_diagnostic.SA1606.severity = suggestion
dotnet_diagnostic.CS8618.severity = warning
dotnet_diagnostic.CS8619.severity = warning
dotnet_diagnostic.IDE0055.severity = suggestion

# Reduce noisy design guidelines where refactors are large
dotnet_diagnostic.CA1050.severity = none
dotnet_diagnostic.CA1051.severity = suggestion
dotnet_diagnostic.CA1716.severity = suggestion
dotnet_diagnostic.CA1805.severity = suggestion


# Downgrade noisy analyzer rules to suggestions
dotnet_diagnostic.CA1822.severity = suggestion
dotnet_diagnostic.CA1852.severity = warning


# Broader analyzer tuning to suggestions
dotnet_analyzer_diagnostic.severity = suggestion
dotnet_diagnostic.CA1854.severity = suggestion
dotnet_diagnostic.CA1000.severity = suggestion
dotnet_diagnostic.CA1310.severity = suggestion
dotnet_diagnostic.CA1869.severity = suggestion
dotnet_diagnostic.CA1001.severity = suggestion


# Analyzer overrides to ensure warnings in editor (kritische Rules)
dotnet_diagnostic.SA1402.severity = warning
dotnet_diagnostic.CA1852.severity = warning
dotnet_diagnostic.SA1611.severity = suggestion
dotnet_diagnostic.SA1616.severity = suggestion
dotnet_diagnostic.MA0051.severity = suggestion
dotnet_diagnostic.MA0047.severity = suggestion
dotnet_diagnostic.MA0048.severity = suggestion

